<Window x:Class="GameApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="👾 Character Manager 👾" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="Assets/7481714.jpg"
                    Stretch="UniformToFill"
                    Opacity="0.15"/>
    </Window.Background>

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <Button Content=" Add " Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content=" Change " Click="EditButton_Click" Margin="0,0,10,0"/>
            <Button Content=" Delete " Click="DeleteButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="CharacterGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Name " Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header=" Level " Binding="{Binding Level}" Width="*"/>
                <DataGridTextColumn Header=" Class " Binding="{Binding Class.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>