<Window x:Class="GameApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Персонажи" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <Button Content="Добавить" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Изменить" Click="EditButton_Click" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="CharacterGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="*"/>
                <DataGridTextColumn Header="Класс" Binding="{Binding Class.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>