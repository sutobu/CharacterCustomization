<Window x:Class="GameApp.Views.ManageClassesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Классы персонажей" Height="350" Width="400">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <Button Content="Добавить" Click="AddButton_Click" Margin="0,0,10,0"/>
            <Button Content="Изменить" Click="EditButton_Click" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteButton_Click"/>
        </StackPanel>

        <ListBox x:Name="ClassListBox"
                 DisplayMemberPath="Name"
                 Margin="10"/>
    </DockPanel>
</Window>